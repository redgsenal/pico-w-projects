{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**"
    ],
    "verbose": true,
    "execMap": {
      "js": "node app.js"
    },
    "events": {
      "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
      "app.js",
      "views/*",
      "public/*"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,hbs"
  }  